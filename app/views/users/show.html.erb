<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <%#= render 'bookmarks',users: @users, book: @book%>
      <table>
  <caption>ブックマーク一覧</caption>
  <thead>
    <tr>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>本文</th>
    </tr>
  </thead>
  <tbody>
    <% @bookmarks.each do |bookmark| %>
      <tr>
        <td><%= bookmark.book.user.name %></td>
        <td>
          <%= link_to book_path(bookmark.book) do %>
            <%= bookmark.book.title %>
          <% end %>
        </td>
        <td><%= bookmark.book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
    </div>
  </div>
</div>
